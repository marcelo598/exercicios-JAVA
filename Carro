public class Main {
    public static void main (String [] args){
        Carro c1 = new Carro("toyota", "cronos", 2015);
        c1.status();
    }
}

public class Carro {
    private String marca;
    private String modelo;
    private int ano;
    private boolean ligado;
    private int velocidadeAtual;

    public Carro(String marca, String modelo, int ano) {
        this.marca = marca;
        this.modelo = modelo;
        this.ano = ano;
        this.ligado = true;       // começa desligado
        this.velocidadeAtual = 0;  // começa parado
    }

    public String getModelo() {
        return this.modelo;
    }

    public void setModelo(String modelo) {
        this.modelo = modelo;
    }

    public String getMarca() {
        return this.marca;
    }

    public void setMarca(String marca) {
        this.marca = marca;
    }

    public int getAno() {
        return this.ano;
    }

    public void setAno(int ano) {
        this.ano = ano;
    }

    public void ligar() {
        this.ligado = true;
        System.out.println("O carro foi ligado.");
    }

    public void desligar() {
        this.ligado = false;
        this.velocidadeAtual = 0; // zera a velocidade ao desligar
        System.out.println("O carro foi desligado.");
    }

    public void acelerar() {
        if (ligado) {
            velocidadeAtual += 10;
            System.out.println("Acelerando... Velocidade atual: " + velocidadeAtual + " km/h");
        } else {
            System.out.println("Não dá para acelerar, o carro está desligado!");
        }
    }

    public void frear() {
        if (velocidadeAtual > 0) {
            velocidadeAtual -= 10;
        }
        System.out.println("Freando... Velocidade atual: " + velocidadeAtual + " km/h");
    }

    public void status() {
        System.out.println("Marca do carro: " + this.marca);
        System.out.println("Modelo do carro: " + this.modelo);
        System.out.println("Ano do carro: " + this.ano);
        System.out.println("O carro está ligado? " + (this.ligado ? "Sim" : "Não"));
        System.out.println("Velocidade atual: " + this.velocidadeAtual + " km/h");
    }
}
